{% set carouselResource = resources({resultsPerPage:1, contentsFilter: {cms_config_id: '^home-images$'}, resourceClass: 'cms'}) %}
{% if carouselResource|length %}
    {% set carouselResource = carouselResource[0] %}
    {% set images = carouselResource|m('obrazek_do_karuzeli') %}
    {% if images|length %}
        <div class="home-page-carousel">
            <div id="carousel-example-generic"
                class="carousel slide"
                data-ride="carousel"
                data-interval="8000">
                <ol class="carousel-indicators">
                    {% for image in images %}
                        <li data-target="#carousel-example-generic"
                            data-slide-to="{{ loop.index }}"
                            class="{% if loop.first %}active{% endif %}"></li>
                    {% endfor %}
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner"
                    role="listbox">
                    {% for image in images %}
                        <div class="item {% if loop.first %}active{% endif %}"
                            style="background-image: url('/api/resources/{{ carouselResource.id }}/file/{{ image }}'); background-position: {{ random(1000) }}px {{ random(1000) }}px">
                            <div class="carousel-caption">
                                {% if image|sub('obrazek_do_karuzeli_zasob')|length %}
                                    <a class="carousel-caption-title"
                                        href="/resources/{{ image|sub('obrazek_do_karuzeli_zasob')|first.value }}">{{ image|sub('obrazek_do_karuzeli_zasob')|resourceLabel }}</a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Controls -->
                <a class="left carousel-control"
                    href="#carousel-example-generic"
                    role="button"
                    data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"
                        aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control"
                    href="#carousel-example-generic"
                    role="button"
                    data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"
                        aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <script>
          document.addEventListener('DOMContentLoaded', function () {
            function animateCarouselItemBackground(item) {
              var newX = parseInt($(item).css('backgroundPositionX')) + (Math.random() * 120 * (Math.random() > .5 ? 1 : -1));
              var newY = parseInt($(item).css('backgroundPositionY')) + (Math.random() * 120 * (Math.random() > .5 ? 1 : -1));
              var newBS = parseInt($(item).css('backgroundSize')) + (Math.random() * 50 * (Math.random() > .5 ? 1 : -1));
              $(item).animate({backgroundPositionX: newX, backgroundPositionY: newY, backgroundSize: newBS}, 10000, 'linear');
            }

            $('#carousel-example-generic').on('slid.bs.carousel', function (event) {
              animateCarouselItemBackground(event.relatedTarget);
            });
            animateCarouselItemBackground($("#carousel-example-generic .item")[0]);
          });
        </script>
    {% endif %}
{% endif %}
