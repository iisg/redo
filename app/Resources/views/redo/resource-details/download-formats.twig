{% set pdfFilePath = resource | metadata('plik_pdf_podstawowy') | first %}
{% set mobiFilePath = resource | metadata('plik_mobi') | first %}

{% if pdfFilePath is not empty or mobiFilePath is not empty %}
    {% set downloadFormats = [
        {
            url: '/api/resources/' ~ resource.id ~ '/file/' ~ pdfFilePath,
            name: 'PDF',
            title: 'Download resource in PDF format' | trans,
            fileAvailable: pdfFilePath is not empty
        },
        {
            url: '/api/resources/' ~ resource.id ~ '/file/' ~ mobiFilePath,
            name: 'EPUB',
            title: 'Download resource in EPUB format' | trans,
            fileAvailable: mobiFilePath is not empty
        }
    ] %}
    <div class="download-options">
        <span class="download-options-icon">{{ icon('download', 1.5) }}</span>
        <fieldset>
            <legend align="left">
                <span>{{ 'Download resource' | trans }}</span>
            </legend>
            <div class="download-formats">
                {% for format in downloadFormats %}
                    {% if format.fileAvailable %}
                        <a href="{{ format.url }}"
                            download
                            title="{{ format.title }}"
                            aria-label="{{ format.title }}">
                            {{ format.name }}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </fieldset>
    </div>
{% endif %}
