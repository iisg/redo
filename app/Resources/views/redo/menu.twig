<div class="site-menu">
    <div>
        <a class="isActive() ? 'active' : ''"
            href="/">
            {{ icon('search', 1.5) }}
            <span>Szukaj</span>
        </a>
        <a class="isActive() ? 'active' : ''"
            href="/resources">
            {{ icon('folder', 1.5) }}
            <span>Przeglądaj</span>
        </a>
        <a class="isActive() ? 'active' : ''"
            href="/for-authors">
            {{ icon('edit', 1.5) }}
            <span>Dla autorów</span>
        </a>
    </div>
    <div>
        {% if app.user %}
            <a href="/me">
                {{ icon('user-2', 1.5) }}
                <span>{{ app.user.username }}</span>
            </a>
            <a href="/admin">
                {{ icon('created', 1.5) }}
                <span>Panel administracyjny</span>
            </a>
            <a href="/logout">
                {{ icon('logout', 1.5) }}
                <span>Wyloguj</span>
            </a>
        {% else %}
            <a href="/login">
                {{ icon('user-2', 1.5) }}
                <span>Zaloguj</span>
            </a>
        {% endif %}
    </div>
</div>
