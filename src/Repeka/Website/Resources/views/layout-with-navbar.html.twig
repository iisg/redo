{% extends "RepekaWebsiteBundle::layout.html.twig" %}
{% block top_bar %}
    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button"
                    class="navbar-toggle"
                    data-toggle="collapse"
                    data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand"
                    href="/"><b>RePeKa</b></a>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="dropdown">
                            <a class="dropdown-toggle"
                                data-toggle="dropdown">
                                <span class="icon">
                                    <svg viewBox="0 0 1 1">
                                        <use xlink:href="/files/icons.svg#user-2"></use>
                                    </svg>
                                </span>
                                {{ app.user.username }}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                {% if is_granted('ROLE_OPERATOR_SOME_CLASS') %}
                                    <li>
                                        <a href="/admin">
                                            Panel administracyjny
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                {% endif %}
                                <li>
                                    <a href="{{ path('logout') }}">
                                        Wyloguj
                                    </a>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('login') }}">
                                Zaloguj się
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <nav class="navbar navbar-info navbar-fixed-bottom">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/about">
                        Repeka
                        <repeka-version></repeka-version>
                        © 2016 - {{ 'now'|date('Y') }}
                    </a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
