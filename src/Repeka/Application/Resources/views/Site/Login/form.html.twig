{% extends "layout.html.twig" %}

{% set page_title = 'Logowanie' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
                <div class="form-group text-center">
                    {% include "logo_repeka.html.twig" %}
                </div>
                <h3 class="text-center text-primary">Formularz logowania</h3>
                <div class="well">
                    <form method="post">
                        <input type="hidden"
                            name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">
                        <fieldset>
                            <div class="col-xs-12">
                                {% if error %}
                                    <div class="alert alert-dismissible alert-danger">
                                        <button type="button"
                                            class="close"
                                            data-dismiss="alert">×
                                        </button>
                                        <strong>Logowanie nieudane.</strong>
                                    </div>
                                {% endif %}
                                <div class="form-group label-floating">
                                    <label class="control-label"
                                        for="username">Nazwa użytkownika</label>
                                    <input name="_username"
                                        type="text"
                                        id="username"
                                        class="form-control input-lg"
                                        value="{{ last_username }}">
                                </div>
                                <div class="form-group label-floating">
                                    <label class="control-label"
                                        for="password">Hasło</label>
                                    <input name="_password"
                                        type="password"
                                        id="password"
                                        class="form-control input-lg">
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"
                                                id="remember_me"
                                                name="_remember_me">
                                            Zapamiętaj mnie
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit"
                                        class="btn btn-primary btn-lg">
                                        Zaloguj
                                        <icon>
                                            <svg viewBox="0 0 1 1" height="1em" fill="currentColor" style="vertical-align: text-top">
                                                <use xlink:href="/files/icons.svg#forward"></use>
                                            </svg>
                                        </icon>
                                    </button>
                                </div>
                            </div>
                        </fieldset>

                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
