{% extends "layout.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1>Strona główna</h1>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <p>Zalogowany jako: <b>{{ app.user.username }}</b></p>
                    <p>
                        <a class="btn btn-large waves-effect"
                            href="/admin">
                            Przejdź do panelu adminisracyjnego
                        </a>
                        <a class="btn btn-large waves-effect"
                            href="{{ path('logout') }}">
                            Wyloguj
                        </a>
                    </p>
                {% else %}
                    <p>
                        <a class="btn btn-large waves-effect"
                            href="{{ path('login') }}">
                            Zaloguj się
                        </a>
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
